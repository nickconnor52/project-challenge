<%= simple_form_for @dog do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.input :user_email, as: :string, :input_html => { :value => f.object.user.try(:email) }, label: 'Owner\'s Email:', placeholder: 'Optional' %>
  <%= f.input :image, as: :file %>

  <% if @dog.images.any? %>
    <%= image_tag @dog.images.first %>
  <% end %>

  <%= f.button :submit %>
<% end %>
